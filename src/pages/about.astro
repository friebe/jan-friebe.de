---
import Footer from "../components/Footer.astro";
import Navi from "../components/Navi.astro";
import Layout from "../layouts/Layout.astro";
import * as about from "../components/about.md";
const obj = Object.assign({}, about);
const { Content } = obj;
---

<Layout title="About">
    <Navi />

    <main class="prose-custom">
        <h1
            class="font-bold text-3xl md:text-5xl tracking-tight mb-5 text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 to-red-600 prose prose-a:text-zinc-600"
        >
            # About
        </h1>
        <Content />
    </main>

    <Footer />
</Layout>
