---
import Layout from "../layouts/Layout.astro";
import Navi from "../components/Navi.astro";
import Footer from "../components/Footer.astro";
import ListBlogPost from "../components/ListBlogPost.astro";
const allPosts = await Astro.glob("../pages/notes/*.md");
const pageTitle = "Notes";
---

<Layout title={pageTitle}>
    <Navi />
    <main class="flex-grow w-full">
        <h1
            class="font-bold text-3xl md:text-5xl tracking-tight mb-5 text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 to-red-600"
        >
            # Notes
        </h1>

        {
            allPosts.map((post) => (
                <ListBlogPost
                    url={post.url}
                    date={post.frontmatter.date}
                    title={post.frontmatter.title}
                />
            ))
        }
    </main>
    <Footer />
</Layout>
