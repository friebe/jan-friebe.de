---
import "../styles/base.css";
import { ViewTransitions } from "astro:transitions";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="robots" content="index,follow" />
		<meta
			name="description"
			content="Jan Friebe Software developer from Germany NRW"
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body
		style="background-color:rgb(17,17,17); height: 100svh"
		class="text-zinc-100 flex flex-col square-bg"
	>
		<slot />
	</body>
</html>
