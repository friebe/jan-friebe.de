---
import Footer from "../components/Footer.astro";
import Navi from "../components/Navi.astro";
import Layout from "../layouts/Layout.astro";
import * as About from "../components/about.md";
const obj = Object.assign({}, About);
const { Content } = obj;
---

<Layout title={About.frontmatter.title}>
    <Navi />

    <main class="prose-about">
        <h1
            class="font-bold text-3xl md:text-5xl tracking-tight mb-5 text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 to-red-600"
        >
            # {About.frontmatter.headline}
        </h1>
        <Content />
    </main>

    <Footer />
</Layout>
